{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./apps/api/src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": "./apps/api/src",
    "paths": {
      "@/*": ["./*"],
      "@shared/*": ["../../packages/shared-types/*"]
    }
  },
  "include": ["apps/api/src/**/*"],
  "exclude": ["node_modules", "dist", "test"]
}
